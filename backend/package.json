{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "npm run db:generate && tsc",
    "build:clean": "rm -rf dist && npm run build",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "seed": "ts-node src/seed.ts",
    "db:seed": "ts-node src/seed.ts",
    "db:reset": "prisma db push --force-reset && npm run seed",
    "setup": "./setup-database.sh",
    "type-check": "tsc --noEmit",
    "lint": "echo 'No linting configured'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "production": "npm run build:clean && npm run db:migrate && npm run start",
    "production:seed": "npm run production && npm run db:seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "axios": "^1.12.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "openai": "^5.20.2",
    "prisma": "^6.16.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.9",
    "@types/node": "^24.3.3",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
