// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(cuid())
  name              String
  email             String   @unique
  instruments       String // JSON array as string
  genres            String // JSON array as string
  location          String?
  availability      String? // e.g., "weekends", "evenings", "full-time"
  bio               String?
  experienceLevel   String // e.g., "beginner", "intermediate", "advanced", "professional"
  collaborationType String // e.g., "band", "solo", "session", "teaching"
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("users")
}
